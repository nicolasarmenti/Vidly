@model IEnumerable<Vidly.Models.Customer>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (!Model.Any()) {
	<text>We don't have customers yet</text>
} else {
	<table class="table">
		<thead>
			<tr>
				<th>Customer</th>
				<th>Discount Rate</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var customer in Model) {
				<tr>
					<td>@Html.ActionLink(@customer.Name, "Details", "Customers", new { id=@customer.Id}, htmlAttributes: null)</td>
					<td>@customer.MembershipType.DiscountRate%</td>
				</tr>
			}
		</tbody>
	</table>
}