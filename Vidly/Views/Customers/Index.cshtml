@model Vidly.ViewModels.CustomersViewModel
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (!Model.Customers.Any()) {
	<text>We don't have customers yet</text>
} else {
	<table class="table">
		<thead><tr><th>Customer</th></tr></thead>
		<tbody>
			@foreach (var customer in Model.Customers) {
				<tr>
					<td>@Html.ActionLink(@customer.Name, "Details", "Customers", new { id=@customer.Id}, htmlAttributes: null)</td>
				</tr>
			}
		</tbody>
	</table>
}