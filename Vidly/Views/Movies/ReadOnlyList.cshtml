@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<div class="row">
	<table id="movies" class="table">
		<thead>
			<tr>
				<th>Movie</th>
				<th>Genre</th>
			</tr>
		</thead>
		<tbody>
		</tbody>
	</table>
</div>

@section scripts{
	<script>
		$(document).ready(function(){
			var table = $("#movies").DataTable({
				ajax: {
					url: "/api/movies",
					dataSrc: ""
				},
				columns: [
					{
						data: "name"
					},
					{
						data: 'genre.name'
					}
				]
			});
		});
	</script>
}